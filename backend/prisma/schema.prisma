generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  OPERATOR
}

enum VehicleType {
  AUTO
  MOTO
  CAMION
  OTRO
}

enum RateType {
  POR_HORA
  POR_FRACCION
  POR_ESTADIA
  MENSUAL
}

enum TicketStatus {
  ACTIVO
  FINALIZADO
  CANCELADO
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(OPERATOR)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ticketsIngreso Ticket[] @relation("OperadorIngreso")
  ticketsSalida  Ticket[] @relation("OperadorSalida")
  abonos         Abono[]

  @@map("users")
}

model Vehicle {
  id        String   @id @default(uuid())
  patente   String   @unique
  tipo      VehicleType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tickets Ticket[]
  abonos  Abono[]

  @@map("vehicles")
}

model Rate {
  id          String   @id @default(uuid())
  nombre      String
  tipo        RateType
  precio      Float
  fraccionMin Float?   // Minutos para fracci칩n
  fraccionMax Float?   // Minutos m치ximos de fracci칩n
  horaInicio  Int?     // Hora inicio (0-23)
  horaFin     Int?     // Hora fin (0-23)
  diaSemana   Int?     // 0=Domingo, 1=Lunes, ..., 6=S치bado (null = todos)
  activo      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tickets Ticket[]
  abonos  Abono[]

  @@map("rates")
}

model Abono {
  id          String   @id @default(uuid())
  vehicleId   String
  userId      String?  // Usuario asociado
  rateId      String
  precio      Float
  fechaInicio DateTime
  fechaFin    DateTime
  activo      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  vehicle Vehicle @relation(fields: [vehicleId], references: [id])
  user    User?   @relation(fields: [userId], references: [id])
  rate    Rate    @relation(fields: [rateId], references: [id])

  @@map("abonos")
}

model Ticket {
  id              String       @id @default(uuid())
  vehicleId       String
  rateId          String?
  patente         String
  tipoVehiculo    VehicleType
  fechaIngreso    DateTime
  fechaSalida     DateTime?
  monto           Float        @default(0)
  horas           Float?
  minutos         Float?
  status          TicketStatus @default(ACTIVO)
  operadorIngreso String
  operadorSalida  String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  vehicle Vehicle @relation(fields: [vehicleId], references: [id])
  rate    Rate?   @relation(fields: [rateId], references: [id])
  userIngreso User @relation("OperadorIngreso", fields: [operadorIngreso], references: [id])
  userSalida  User? @relation("OperadorSalida", fields: [operadorSalida], references: [id])

  @@map("tickets")
}

model Config {
  id              String   @id @default(uuid())
  key             String   @unique
  value           String
  description     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("configs")
}

